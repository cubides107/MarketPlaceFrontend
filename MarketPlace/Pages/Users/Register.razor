@page "/register"
@using CreditAppWeb.Data.Http.Users


@inject UserClient usersHttp

<section class="vh-100 bg-image"
         style="background-image: url('https://images.pexels.com/photos/122429/leaf-nature-green-spring-122429.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');">
    @*<div class="mask d-flex align-items-center h-100 gradient-custom-3">*@
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-3">
                        <h2 class="text-uppercase text-center mb-5">CREAR UNA CUENTA</h2>
                        <RadzenAlert AllowClose="false" Visible="@IsVisible" AlertStyle="AlertStyle.Warning" Variant="Variant.Filled" Shade="Shade.Lighter">
                            @Error
                        </RadzenAlert>
                        <EditForm Model="User" OnSubmit="RegisterUser">
                            <div class="form-outline mb-4">
                                <label class="form-label" for="form3Example1cg">Nombres</label>
                                <input type="text" id="form3Example1cg" class="form-control form-control-lg" required @bind-value="User.Names"/>
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="form3Example1cg">Apellidos</label>
                                <input type="text" id="form3Example1cg" class="form-control form-control-lg" required @bind-value="User.LastNames"/>
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="form3Example3cg">Email</label>
                                <input type="email" id="form3Example3cg" class="form-control form-control-lg" required @bind-value="User.Email"/>
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="form3Example4cg">Contraseña</label>
                                <input type="password" id="form3Example4cg" class="form-control form-control-lg" required @bind-value="User.Password"/>
                            </div>

                            <div class="d-flex justify-content-center">
                                <RadzenButton class="mt-3" Style="background-color:#165B2A" ButtonType="ButtonType.Submit">REGISTRAR</RadzenButton>
                            </div>

                            <p class="text-center text-muted mt-5 mb-0">
                                Ya Tienes una cuenta?
                                <a href="/login"
                                   class="fw-bold text-body">
                                    <u>Login</u>
                                </a>
                            </p>

                        </EditForm>

                    </div>
                </div>
            </div>
        </div>
        @*</div>*@
    </div>
</section>